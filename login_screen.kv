<CustomPopupSuccess>:
    auto_dismiss: False
    size_hint: 0.45, 0.2
    pos_hint:{'center_x':.5,'center_y':.5}
    title: "Connection r√©ussie"
    RelativeLayout:
        MDFillRoundFlatButton:
            text: "Fermer"
            font_size: dp(28)
            size_hint: None, None
            size: dp(250), dp(25)
            pos_hint:{'center_x':.5,'center_y':.25}
            on_release: root.dismiss()

<CustomPopupError>:
    auto_dismiss: False
    size_hint: 0.45, 0.2
    pos_hint:{'center_x':.5,'center_y':.5}
    RelativeLayout:
        MDFillRoundFlatButton:
            text: "Fermer"
            font_size: dp(28)
            size_hint: None, None
            size: dp(250), dp(25)
            pos_hint:{'center_x':.5,'center_y':.25}
            on_release: root.dismiss()

<CustomMDLabel@MDLabel>
    theme_text_color: "Custom"
    text_color: custom_color


<CustomTextInput@TextInput>
    background_normal: "data/images/transparent.png"
    background_active: self.background_normal
    padding: "8dp", "8dp", "8dp", 0
    cursor_color: "#00AAD5"
    foreground_color: (1, 1, 1, 1)
    multiline: False

    canvas.after:
        Color:
            rgba: 0, 0, 0, .2
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]


<ScaleImage@FitImage>
    scale: 1
    radius: [15, ]

    canvas.before:
        PushMatrix
        Scale:
            x: root.scale
            y: root.scale
            z: root.scale
            origin: self.center
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.2
            rounded_rectangle:
                self.x, self.y, self.width, self.height, \
                15, 15, 15, 15, \
                self.height
    canvas.after:
        PopMatrix



<LoginScreen>
    md_bg_color: get_color_from_hex("#5a6a75")
    no_matricule_field: no_matricule_field
    signin_button: signin_button

    ScaleImage:
        id: avatar
        source: "data/images/logo_DIT3.png"
        size_hint: None, None
        size: "240dp", "82dp"
        pos_hint: {"center_x": .5}
        y: root.height - self.height - dp(56)

    CustomMDLabel:
        id: no_matricule_label
        text: "Entrez votre identifiant"
        adaptive_size: True
        pos_hint: {"center_y": .75,"center_x":.5}
        x: no_matricule_field.x - self.width - dp(12)

    CustomTextInput:
        id: no_matricule_field
        opacity: no_matricule_label.opacity
        size_hint: .3, None
        height: signin_button.height
        pos_hint: {"center_y": .65}
        x: root.center[0] - self.width / 2

    MDFillRoundFlatButton:
        id: signin_button
        text: "Se connecter"
        size_hint_x: .2
        y: no_matricule_field.y - self.height - dp(36)
        _radius: 8
        x: root.center[0] - self.width / 2
        on_release: root.check_user(self)
